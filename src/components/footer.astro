---
import { Rocket } from "tabler-icons-react";
import IconLink from "./ui/icon-link.astro";
---

<footer class="mt-auto p-4">
  <div class="flex items-center rounded-xl border border-zinc-300 p-4">
    <span>&copy; {new Date().getFullYear()}</span>
    <span class="mx-4 block h-4 w-px bg-zinc-300"></span>
    <div class="flex items-center">
      <span>Built using</span>
      <IconLink
        text="Astro"
        href="https://astro.build/"
        class="ml-2 translate-y-0 hover:border-[#fe5e01] hover:text-[#fe5e01] focus:border-[#fe5e01] focus:text-[#fe5e01]"
        blank
      >
        <Rocket className="w-4 text-[#fe5e01]" />
      </IconLink>
    </div>
  </div>
</footer>
