---
export interface BreadcrumbsProps {
  breadcrumbs: string[];
}
const { breadcrumbs } = Astro.props as BreadcrumbsProps;
---

{breadcrumbs.map((breadcrumb, index) => (
  <>
    <a
      href={`/${breadcrumbs.slice(0, index + 1).join("/")}`}
      class="text-zinc-500 hover:text-zinc-600"
    >
      {breadcrumb}
    </a>
    {index + 1 !== breadcrumbs.length && <span class="mx-2">/</span>}
  </>
))}
